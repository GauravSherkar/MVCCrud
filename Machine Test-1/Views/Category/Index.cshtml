@model IEnumerable<Machine_Test_1.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p style="color:orangered;">@TempData["InsertMessage"]</p>
<p style="color:orangered;">@TempData["UpdateMessage"]</p>
<p style="color:orangered;">@TempData["DeleteMessage"]</p>
<p style="color:orangered;">@TempData["Exception"]</p>
<hr />

@Html.ActionLink("Create New Category", "Create")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table>
        <tr>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId })
                    @Html.ActionLink("Details", "Details", new { id = item.CategoryId })
                    @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId })
                </td>
            </tr>
        }
    </table>
}